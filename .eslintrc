{
	"extends": ["airbnb-base", "prettier"],
	"plugins": ["prettier"],
	"env": {
		"mocha": true,
		"es6": true,
		"node": true
	},
	"rules": {
		"no-undef": 2,
		"no-console": "off",
		"consistent-return": "off",
		"prefer-destructuring": [
			"error",
			{
				"object": false,
				"array": false
			}
		],
		"dot-notation": 0,
		"no-underscore-dangle": [2, { "allow": ["_id"] }],
		"no-shadow": [2, { "allow": ["err"] }]
	}
}
